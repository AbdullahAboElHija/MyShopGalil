<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/editTextNameReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddressReg"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddressReg" />

    <EditText
        android:id="@+id/editTextTextPasswordReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword2Reg"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword2Reg" />

    <EditText
        android:id="@+id/editTextTextPassword2Reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordReg" />

    <EditText
        android:id="@+id/editTextTextEmailAddressReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPasswordReg"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPasswordReg"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerBtnScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="Register"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2Reg" />

    <Button
        android:id="@+id/backBtnRegisterScreen"
        android:layout_width="91dp"
        android:layout_height="43dp"
        android:layout_marginBottom="59dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Email :"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextTextEmailAddressReg"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddressReg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="44dp"
        android:text="Name :"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddressReg"
        app:layout_constraintEnd_toStartOf="@+id/editTextNameReg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="25dp"
        android:text="Password :"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPasswordReg"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddressReg" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="Retype password :"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextTextPassword2Reg"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword2Reg"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>